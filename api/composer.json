{
    "name": "skazkin/auction",
    "description": "Auction App",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "symfony/console": "^6.2"
    },
    "require-dev": {
        "overtrue/phplint": "^9.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "app": "@php bin/app.php --ansi",
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm"
    }
}
